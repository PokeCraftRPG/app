{
  "Account": {
    "AllocatedBytes": 5242880, // 5 MB
    "WorldLimit": 3
  },
  "AllowedHosts": "*",
  "Caching": {
    "ActorLifetime": "00:15:00"
  },
  "Cookies": {
    "RefreshToken": {
      "HttpOnly": true,
      "MaxAge": "7.00:00:00",
      "SameSite": "Strict",
      "Secure": true
    },
    "Session": {
      "SameSite": "Strict"
    }
  },
  "Cors": {
    "AllowAnyOrigin": false,
    "AllowedOrigins": [],
    "AllowAnyMethod": false,
    "AllowedMethods": [],
    "AllowAnyHeader": false,
    "AllowedHeaders": [],
    "AllowCredentials": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "OpenAuthentication": {
    "AccessToken": {
      "TokenType": "at+jwt",
      "LifetimeSeconds": 300
    }
  },
  "Portal": {
    "Realm": "pokemon"
  }
}
